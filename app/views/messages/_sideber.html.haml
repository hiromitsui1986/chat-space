.sideber
  .sideber-header
    .sideber-header__box
      .sideber-header__box-name
        = current_user.name
      .sideber-header__box-list
        = link_to new_group_path do
          = fa_icon "pencil-square-o", id: 'icon-group'
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', id: 'edit-icon'

  .groups
    .group
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message

    